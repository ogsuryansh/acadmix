<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Book Management</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      :root {
        --primary: #2563eb;
        --primary-dark: #1e40af;
        --primary-light: #3b82f6;
        --danger: #ef4444;
        --success: #22c55e;
        --background: #f0f4f8;
        --card-bg: #fff;
        --shadow: 0 4px 16px rgba(37, 99, 235, 0.08);
        --border-radius: 14px;
      }
      body {
        font-family: "Segoe UI", Arial, sans-serif;
        background: var(--background);
        padding: 2rem 0.5rem;
        margin: 0;
      }
      h1 {
        color: var(--primary-dark);
        text-align: center;
        margin-bottom: 2rem;
        font-size: 2rem;
        letter-spacing: 1px;
      }
      .btn-add {
        display: inline-block;
        margin-bottom: 22px;
        padding: 10px 20px;
        background: linear-gradient(90deg, var(--primary), var(--primary-light));
        color: #fff;
        text-decoration: none;
        border-radius: 7px;
        font-weight: 600;
        font-size: 1rem;
        box-shadow: 0 2px 8px #2563eb22;
        transition: background 0.2s, transform 0.2s;
      }
      .btn-add:hover {
        background: linear-gradient(90deg, var(--primary-dark), var(--primary));
        transform: translateY(-2px) scale(1.01);
      }
      table {
        width: 100%;
        border-collapse: collapse;
        background: var(--card-bg);
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
        overflow: hidden;
        margin: 0 auto;
      }
      th, td {
        padding: 1rem 0.7rem;
        text-align: center;
        font-size: 1rem;
        border-bottom: 1px solid #e5e7eb;
      }
      th {
        background: #f3f6fa;
        color: var(--primary-dark);
        font-weight: 600;
      }
      tr:last-child td {
        border-bottom: none;
      }
      img {
        width: 60px;
        border-radius: 8px;
        box-shadow: 0 2px 8px #2563eb22;
      }
      .actions form {
        display: inline;
      }
      .btn-edit,
      .btn-delete {
        padding: 7px 14px;
        text-decoration: none;
        border-radius: 5px;
        margin: 2px 0;
        display: inline-block;
        font-size: 0.98rem;
        font-weight: 600;
        border: none;
        cursor: pointer;
        transition: background 0.2s, transform 0.2s;
      }
      .btn-edit {
        background: var(--primary-light);
        color: #fff;
      }
      .btn-edit:hover {
        background: var(--primary-dark);
        transform: scale(1.04);
      }
      .btn-delete {
        background: var(--danger);
        color: #fff;
      }
      .btn-delete:hover {
        background: #b91c1c;
        transform: scale(1.04);
      }
      a[href*="pdf"] {
        color: var(--primary-dark);
        text-decoration: underline;
        font-weight: 500;
      }
      @media (max-width: 900px) {
        table, thead, tbody, th, td, tr {
          display: block;
        }
        thead tr {
          display: none;
        }
        tr {
          margin-bottom: 1.5rem;
          background: #fff;
          border-radius: 10px;
          box-shadow: 0 2px 8px #2563eb11;
          padding: 0.7rem 0.3rem;
        }
        td {
          border: none;
          position: relative;
          padding-left: 50%;
          text-align: left;
          min-height: 38px;
        }
        td:before {
          position: absolute;
          left: 1rem;
          top: 1rem;
          width: 45%;
          white-space: nowrap;
          font-weight: 600;
          color: var(--primary-dark);
        }
        td:nth-child(1):before { content: "Image"; }
        td:nth-child(2):before { content: "Title"; }
        td:nth-child(3):before { content: "Category"; }
        td:nth-child(4):before { content: "Section"; }
        td:nth-child(5):before { content: "Price"; }
        td:nth-child(6):before { content: "Discount"; }
        td:nth-child(7):before { content: "Badge"; }
        td:nth-child(8):before { content: "Demo"; }
        td:nth-child(9):before { content: "PDF"; }
        td:nth-child(10):before { content: "Actions"; }
      }
      @media (max-width: 600px) {
        .btn-add {
          width: 100%;
          text-align: center;
          font-size: 0.98rem;
        }
        h1 {
          font-size: 1.3rem;
        }
        td, th {
          font-size: 0.95rem;
          padding: 0.7rem 0.3rem;
        }
      }
    </style>
  </head>
  <body>
    <h1>Books Management</h1>

    <a href="/api/admin/books/new" class="btn-add">+ Add New Book</a>

    <table>
      <thead>
        <tr>
          <th>Image</th>
          <th>Title</th>
          <th>Category</th>
          <th>Section</th>
          <th>Price</th>
          <th>Discount</th>
          <th>Badge</th>
          <th>Demo</th>
          <th>PDF</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% books.forEach(book => { %>
        <tr>
          <td><img src="<%= book.imageUrl %>" alt="book" /></td>
          <td><%= book.title %></td>
          <td><%= book.category %></td>
          <td><%= book.section %></td>
          <td>‚Çπ<%= book.priceOriginal %></td>
          <td>‚Çπ<%= book.priceDiscounted %></td>
          <td><%= book.badge %></td>
          <td><%= book.demo || "No" %></td>
          <td>
            <% if (book.pdfUrl) { %>
            <a href="<%= book.pdfUrl %>" target="_blank">View PDF</a>
            <% } else { %>
            <span style="color: gray">No PDF</span>
            <% } %>
          </td>
          <td class="actions">
            <a href="/api/admin/books/<%= book._id %>/edit" class="btn-edit"
              >‚úèÔ∏è Edit</a
            >
            <form
              action="/api/admin/books/<%= book._id %>/delete"
              method="POST"
              onsubmit="return confirm('Are you sure you want to delete this book?');"
            >
              <button type="submit" class="btn-delete">üóëÔ∏è Delete</button>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>