# Database Configuration
MONGO_URI=mongodb://localhost:27017/acadmix

# Session Configuration (REQUIRED - Generate a secure random string)
SESSION_SECRET=your-super-secret-session-key-here-make-it-long-and-random

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Server Configuration
NODE_ENV=development
PORT=5000

# Admin Configuration
ADMIN_USER=admin
ADMIN_PASS=your-secure-admin-password

# CORS Configuration
ALLOWED_ORIGINS=https://acadmix.shop,https://www.acadmix.shop

# Frontend Configuration
FRONTEND_ORIGIN=http://localhost:5173
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Payment Configuration
UPI_ID=your-upi-id@paytm
PAYEE_NAME=Your Business Name
BANK_NAME=Your Bank Name
PAYMENT_CURRENCY=INR
TEST_PAYMENT_AMOUNT=100

# File Upload Configuration
MAX_IMAGE_SIZE=5242880
MAX_PDF_SIZE=104857600
ALLOW_LARGE_FILES=false

# Cloud Storage (Optional)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Backblaze B2 (Optional)
B2_ACCOUNT_ID=your-b2-account-id
B2_APPLICATION_KEY=your-b2-application-key
B2_BUCKET_ID=your-b2-bucket-id
B2_BUCKET_NAME=acadmix-storage

# Admin Panel Configuration
ADMIN_PAYMENTS_LIMIT=50
ADMIN_GROWTH_PERIOD=month
ADMIN_PAGINATION_LIMIT=20
ADMIN_REFRESH_INTERVAL=30000
