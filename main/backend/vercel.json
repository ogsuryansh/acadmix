{
  "version": 2,
  "buildCommand": "cd main/backend && npm install",
  "outputDirectory": "main/backend",
  "builds": [
    { 
      "src": "main/backend/server.js", 
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["main/backend/**"]
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/main/backend/server.js" }
  ],
  "functions": {
    "main/backend/server.js": {
      "maxDuration": 30
    }
  }
}
